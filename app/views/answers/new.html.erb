<%= form_tag quiz_answers_path(@quiz) do %>
  <% @quiz.questions.each do |question| %>
    <p>
      <%= question.content %>
      <ol>
        <% question.choices.each do |choice| %>
        <li>
          <%= choice.content %>
          <input type="radio" name="choices[<%= question.id %>][]" value="<%= choice.id %>"/>
        </li>
        <% end %>
      </ol>
    </p>
  <% end %>

  <%= submit_tag %>
<% end %>